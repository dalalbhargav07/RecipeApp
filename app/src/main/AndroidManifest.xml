<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dalalbhargav07.recipeapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <activity android:name=".showRecipeDetail"
            android:label="showRecipeDetail">
        </activity>

        <activity android:name=".add_recipe"
            android:label="add_recipe">
        </activity>

        <activity android:name=".showRecipe_recyclerview"
            android:label="showRecipe_recyclerview">
        </activity>


        <activity android:name=".editRecipe"
            android:label="editRecipe">
        </activity>

    </application>

</manifest>